<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrloveqd.discovery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.mrloveqd.discovery.DiscoveryActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mrloveqd.discovery.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
        </activity>
        <activity
            android:name="com.mrloveqd.discovery.CountryActivity"
            android:label="@string/title_activity_country"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
        </activity>
    </application>

</manifest>