<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000" >
    
    <View
        android:id="@+id/add_note"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="#EDDA74" >
    </View>
    
    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/view1" >
        
        <TextView
            android:id="@+id/Text1"
            android:layout_width="180dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text="S Pen \nKhám phá sự sáng tạo của riêng bạn"
            android:textColor="#FDEEF4"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageView
                android:id="@+id/add_note_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pen" />
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/Layout2"
        android:layout_below="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        
        <LinearLayout
            android:id="@+id/Layout3"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
		    
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:paddingLeft="50dp"
                android:paddingTop="15dp"
                android:background="#EE9A4D">

	            <TextView
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:text="Danh sách" 
	                android:textColor="#3BB9FF"/>
			</LinearLayout>     
	       	        
	       	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent" >
		
	        	<TextView
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="fill_parent"
	        	    android:paddingLeft="45dp"
	        	    android:paddingTop="15dp"
	        	    android:text="Tạo ghi chú"
	        	    android:background="#EE9A4D"
	        	    android:textColor="#3BB9FF" />

			</LinearLayout>
		
		
		</LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#EE9A4D" >
            
            <ListView
                android:id="@+id/note_view" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	        </ListView>
            
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>